def school( Name, Rollno, marks1, marks2 ):
    
    l = Student(self, Name, Rollno, marks1, marks2 )
    ls.append(l)
    
    # Function to display student details     
def display(self, ob):
    print("Name   : ", l.name)
    print("RollNo : ", l.rollno)
    print("Marks1 : ", l.m1)
    print("Marks2 : ", l.m2)
    print("\n")    
    
    # Search Function    
def search(self, rn):
    for i in range(ls.__len__()):
        # iterate through the list containing
        # student object and checks through
        # roll no of each object
        if(ls[i].rollno == rn):
            # returns the object with matching 
            # roll number
            return i 
            
            # Delete Function                                  
def delete(self, rn):
    # Calls the search function 
    # created above
    i = obj.search(rn)  
    del ls[i]
    
    # Update Function   
def update(self, rn, No):
    # calling the search function
    # of student class
    i = obj.search(rn)
    ls[i].rollno = No
